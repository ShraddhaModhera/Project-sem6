@model EcommerceProject.Models.Payment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

<head>

    <title>Premier Mart | Sales</title>
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/template/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- jsGrid -->
    <link rel="stylesheet" href="~/template/plugins/jsgrid/jsgrid.min.css">
    <link rel="stylesheet" href="~/template/plugins/jsgrid/jsgrid-theme.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/template/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">

</head>

<body>
    <!-- Content Wrapper. Contains page content -->
    @*<div class="content-wrapper">*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-2">
                    <button onclick="location.href='@Url.Action("List","Payment")'" type="button" class="btn btn-block btn-danger">
                        <i class="fas fa-times" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp;Cancel
                    </button>
                </div>
                <div class="col-sm-10">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Sales</a></li>
                        <li class="breadcrumb-item active">Delete Payment</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row-mb-2">
                <!-- general form elements -->
                <div class="card">
                    <div class="card-header" style="background-color:rosybrown; color:white;">
                        <p>Are you sure you want to delete this?</p>
                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Created_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Created_date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Modified_date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Modified_date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Order_id)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Order_id)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Customer_id)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Customer_id)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Amount)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Payment_Method)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Payment_Method)
                            </dd>

                        </dl>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <div class="col-3">
                                    <input type="submit" value="Delete" class="btn btn-block" style="background-color:rosybrown; color:white;" />
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>

    <!-- jQuery UI 1.11.4 -->
    <script src="~/template/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/template/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/template/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/template/dist/js/pages/dashboard.js"></script>
</body>