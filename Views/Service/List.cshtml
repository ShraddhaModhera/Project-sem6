    <!-- Content Header (Page header) -->
    <div class="card">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-2">
                        <button onclick="location.href='@Url.Action("Create", "Service")'" type="button" class="btn btn-block btn-danger">
                            <i class="fa fa-plus" aria-hidden="true"></i> &nbsp;&nbsp;&nbsp;Add Services
                        </button>

                    </div><!-- /.col -->
                    <div class="col-sm-10">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Services</a></li>
                            <li class="breadcrumb-item active">Services List</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <br />
        <div class="row">
            <div class="col-12">

                <div class="card-body table-responsive p-0">
                    <table class="table table-bordered table-hover text-nowrap">
                        <thead style="background-color:crimson; color:white">
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Cost</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="5" style="color:red" align="center">
                                        Records Not Found
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.S_title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Product_des)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cost)
                                        </td>
                                        <td>
                                            @if (item.Is_active == 1)
                                            {
                                                <span class="tag-active" style="width: 71px; display: inline-block; padding: 5px 15px;">Active</span>
                                            }
                                            else if (item.Is_active == 0)
                                            {
                                                <span class="tag-inactive" style="width: 93px; display: inline-block; padding: 5px 15px;">In - Active</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "Service", new { id = item.Service_id })"><i class="fas fa-pencil-alt"></i></a>
                                            <a href="@Url.Action("Delete", "Service", new { id = item.Service_id })"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <div class="card-footer clearfix">
                    <ul class="pagination pagination-sm m-0 float-right">
                        @Html.PagedListPager(Model, i => Url.Action("List", "Service", new { i, search = Request.QueryString["searching"] }))
                    </ul>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
